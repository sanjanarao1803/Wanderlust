<% layout("/layouts/boilerplate") %> 
<!-- <%=success%> -->
<body>
    <h3>All Listings</h3>

    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-md-1">
        <% for(let listing of allListings) { %>
        <div class="col-lg-4 col-md-6 col-sm-8 mb-4">
            <a href="/listings/<%=listing._id%>" class="listing_link d-block">
                <div class="card listing-card" >
                    <img class="card-img-top" src="<%=listing.image%>" alt="listing_image" style="height: 20rem;" />
                    <div class="card-img-overlay"></div>
                    <div class="card-body">
                        <p class="card-text">
                            <b><%=listing.title%></b> <br/>
                            &#8377; <%= listing.price.toLocaleString("en-IN") %>/night
                        </p>
                    </div>
                </div>
            </a>
        </div>
        <% } %>
    </div>

